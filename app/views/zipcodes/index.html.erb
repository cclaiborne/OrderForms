<style type="text/css">
#search-field {
  width: 35%;
  float:left;
  margin-left:10%;
  padding: 10px;
  max-width: 180px;
}
#submit-button{
  display: inline-block;
}
#select-zip a{
  color: green;
}
body
{
  padding-left: 5px;
  float:left;
}
table{
  margin-left: 0px;
  display: inline-block;
}
</style>
<div class="row">
  <h4>Your Ads Will Be Shown to Home Owners in These ZIP Codes</h4>
</div>
<div class="row">
  <%= form_tag(zipcodes_path, :method => "get", id: "search-form") do %>
    <div id = "search-field"><%= text_field_tag :search, params[:search], placeholder: "Search Zipcodes" %></div>
    <div id = "submit-button"><%= submit_tag "Check Availability", :name => nil, :class=> "button" %></div>
  <% end %>
</div>
<div class="row">
  <%= render 'ziptable' %>
</div>
<div class="row">
  <%= link_to 'Checkout', payments_path, :color=> '#FFFFFF', :class=> "button" %>
</div>





